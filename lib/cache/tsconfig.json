{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "noImplicitUseStrict": true,
    "strict": false,
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "experimentalDecorators": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowJs": false,
    "rootDir": "src"
  },
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": true
}